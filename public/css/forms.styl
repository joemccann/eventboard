fieldset
  border none
  max-width 320px
  margin 0 auto
  background rgba(199, 195, 195, 0.51)

label
  display block
  padding 0 4% 0.5%
  font-size 1.4em
  text-align left

input[type='text'],
input[type='number'],
input[type='name'],
input[type='email'],
input[type='twitter']
  width 92%
  min-height 36px
  borderRadius(4px)
  padding 4% 4%
  font-size 1.4em
  color #777
  outline none
  normTransition(all 0.30s ease-in-out)

input[type='text']:focus,
input[type='number']:focus,
input[type='name']:focus,
input[type='email']:focus,
input[type='twitter']:focus
  boxShadow(0 0 15px $linkColor)

.form-item
  padding 1% 3%
  margin 1% auto

.form-item:last-child
  margin 6% auto 2%

form .error
  border red 4px solid

