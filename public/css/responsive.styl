@import 'variables'

/* 1em = 16px */

/* Retina-specific stuff here */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
  body
    background #f4f5ed url('/img/cream_dust_@2X.png') repeat top left scroll

/* 1920px */
$trans = translate(105%, 85%)
@media only screen and (max-width: 120em)

  #logo
    normTransform($trans)
    normTransformOrigin(top left)

/* 1440px */
$trans = translate(85%, 50%)
@media only screen and (max-width: 90em)

  #logo
    normTransform($trans)
  
/* 1024px */
$trans = translate(65%, 33%) scale(0.7,0.7)
@media only screen and (max-width: 64em)

  #logo
    normTransform($trans)

  .metrics-container > section
    display table-row
    padding 2%
    width 96%
      

/* 768px */
$trans = translate(50%, 25%) scale(0.55,0.55)
@media only screen and (max-width: 48em)

  #logo
    normTransform($trans)


    
/* 640px */
$trans = translate(42%, 23%) scale(0.4,0.4)
@media only screen and (max-width: 40em)

  #logo
    normTransform($trans)

/* 480px */
$trans = translate(28%, 17%) scale(0.3,0.3)
@media only screen and (max-width: 30em)

  #logo
    normTransform($trans)

/* 320px */
$trans = translate(12%, 7%) scale(0.3,0.3)
@media only screen and (max-width: 20em)

  .pad
    width 96%
    padding 0 2%