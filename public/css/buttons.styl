@import 'variables'

$frontColor=#28a0e5
$backColor=#015e94

$spanFrontColor=$linkColor
$spanBackColor=lighten($linkColor,20)
$spanMidColor=darken($linkColor,20)

button
  overflow: hidden
  display: inline-block
  visibility: visible !important
  background-image: -webkit-linear-gradient($frontColor, $backColor)
  background-image: -moz-linear-gradient($frontColor, $backColor)
  background-image: -ms-linear-gradient($frontColor, $backColor)
  background-image: -o-linear-gradient($frontColor, $backColor)
  background-image: linear-gradient($frontColor, $backColor)
  -webkit-font-smoothing: antialiased
  border: 0
  padding: 1px
  text-decoration: none
  -moz-border-radius: 5px
  -webkit-border-radius: 5px
  border-radius: 5px
  -moz-box-shadow: 0 1px 0 rgba(0,0,0,0.2)
  -webkit-box-shadow: 0 1px 0 rgba(0,0,0,0.2)
  box-shadow: 0 1px 0 rgba(0,0,0,0.2)
  -webkit-touch-callout: none
  -webkit-tap-highlight-color: transparent
  -moz-user-select: none
  -khtml-user-select: none
  -webkit-user-select: none
  -ms-user-select: none
  -o-user-select: none
  user-select: none
  cursor: pointer

button span
  display: block
  position: relative
  padding: 0 12px
  height: 30px
  line-height: 30px
  background: $spanFrontColor
  background-image: -webkit-linear-gradient($spanFrontColor, $spanMidColor 85%, $spanBackColor)
  background-image: -moz-linear-gradient($spanFrontColor, $spanMidColor 85%, $spanBackColor)
  background-image: -ms-linear-gradient($spanFrontColor, $spanMidColor 85%, $spanBackColor)
  background-image: -o-linear-gradient($spanFrontColor, $spanMidColor 85%, $spanBackColor)
  background-image: linear-gradient($spanFrontColor, $spanMidColor 85%, $spanBackColor)
  font-size: 14px
  color: #fff
  font-weight: bold
  text-shadow: 0 -1px 0 rgba(0,0,0,0.25)
  -moz-box-shadow: inset 0 1px 0 rgba(255,255,255,0.25)
  -webkit-box-shadow: inset 0 1px 0 rgba(255,255,255,0.25)
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.25)
  -moz-border-radius: 4px
  -webkit-border-radius: 4px
  border-radius: 4px
  
.no-touch button span:hover
  background: lighten($spanFrontColor,15)
  background-image: -webkit-linear-gradient($spanFrontColor, $spanMidColor 45%, $spanBackColor)
  background-image: -moz-linear-gradient($spanFrontColor, $spanMidColor 45%, $spanBackColor)
  background-image: -ms-linear-gradient($spanFrontColor, $spanMidColor 45%, $spanBackColor)
  background-image: -o-linear-gradient($spanFrontColor, $spanMidColor 45%, $spanBackColor)
  background-image: linear-gradient($spanFrontColor, $spanMidColor 45%, $spanBackColor)

#signup-button
  width 92%

#signup-button span
  font-size 1.4em
  height 2.4em
  padding 9px 12px